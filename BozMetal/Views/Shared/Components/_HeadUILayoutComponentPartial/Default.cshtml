    .photo-gallery .item img {
        width: 400px; /* Standart genişlik */
        height: 400px; /* Standart yükseklik */
        object-fit: cover; /* Resimlerin düzgün bir şekilde kırpılması için */
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s ease;
    }

    .photo-gallery .item:hover img {
        transform: scale(1.05);
