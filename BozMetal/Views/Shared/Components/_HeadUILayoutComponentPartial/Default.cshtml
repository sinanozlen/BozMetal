        /* Galeri Stilleri */
        .gallery {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 10px;
            padding: 20px;
        }

        .gallery-item {
            width: 250px; /* Örnek boyutlar, ihtiyaca göre ayarlayın */
            height: 250px; /* Örnek boyutlar, ihtiyaca göre ayarlayın */
            overflow: hidden;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin: 5px;
            position: relative;
        }

            .gallery-item img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.2s ease;
            }

            .gallery-item:hover img {
                transform: scale(1.1);
            }

        .caption {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            background: rgba(0, 0, 0, 0.5);
            text-align: center;
           
            font-size: 12px;
            padding: 2px;
            display: none;
        }

        .gallery-item:hover .caption {
            display: block;
        }


